<!DOCTYPE html>
<html>
  <head>
    <title>Blog App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if admin_signed_in? %>
  <%= link_to current_admin.email, edit_admin_registration_path %>
  <%= button_to "Sign-out", destroy_admin_session_path, method: :delete %>

  <% else %>
  <%=link_to "Log in",new_admin_session_path %>

  <%= link_to "Sign-up", new_admin_registration_path %>
  <%= link_to "Update password", edit_admin_registration_path %>
  
  <% end %>



    <%= yield %>
  </body>
</html>
